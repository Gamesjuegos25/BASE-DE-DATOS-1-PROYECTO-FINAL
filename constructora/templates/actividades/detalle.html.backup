{% extends "base.html" %}
{% block title %}Detalle Actividad{% endblock %}
{% block content %}
<div class="page-header">
  <nav class="breadcrumb">
    <a href="{{ url_for('dashboard') }}">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="{{ url_for('listar_actividades') }}">Actividades</a>
    <span class="breadcrumb-separator">/</span>
    <span>Detalle</span>
  </nav>
  <h1 class="page-title">ðŸ“‹ {{ actividad.nombre or 'Actividad' }} <small class="text-muted">ID: {{ actividad.id or actividad.actividad_id }}</small></h1>
</div>

<div class="card">
  <div class="card-body">
    <dl class="detail-list">
      <dt>Nombre</dt>
      <dd>{{ actividad.nombre or 'N/D' }}</dd>
      
      <dt>DescripciÃ³n</dt>
      <dd>{{ actividad.descripcion or 'Sin descripciÃ³n' }}</dd>
      
      <dt>Fecha Programada</dt>
      <dd>
        {% if actividad.fecha_programada %}
          {{ actividad.fecha_programada.strftime('%d/%m/%Y') if actividad.fecha_programada.strftime else actividad.fecha_programada }}
