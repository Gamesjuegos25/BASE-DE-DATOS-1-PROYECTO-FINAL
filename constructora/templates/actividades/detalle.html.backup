    <form action="{{ url_for('eliminar_actividad', id=(actividad.id or actividad.actividad_id)) }}" method="post" class="inline-form" onsubmit="return confirm('Â¿Eliminar esta actividad?');">
      <button class="btn btn-danger" type="submit">Eliminar</button>
    </form>
  </div>
</div>
{% endblock %}
