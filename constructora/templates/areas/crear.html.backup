{% extends "base.html" %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Areas - Sistema Constructora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/create-forms.css') }}" rel="stylesheet">
</head>
<body>
    <div class="create-form-container">
        <!-- Header -->
        <div class="create-page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('listar_areas') }}">
                            <i class="fas fa-list"></i> Areas
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-plus"></i> Crear Area
                    </li>
                </ol>
            </nav>
            
            <div class="create-title-section">
                <h1 class="create-title">
                    <i class="fas fa-plus-circle"></i>
                    Crear Area
                </h1>
                <p class="create-subtitle">Complete el formulario para registrar una nueva area</p>
            </div>
        </div>

        <!-- Formulario -->
        <div class="create-form-card">
            <form method="POST" action="{{ url_for('crear_area') }}" class="needs-validation" novalidate>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="nombre" class="form-label">
                            Nombre del Área <span class="required">*</span>
                        </label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required placeholder="Ingrese nombre del área">
                        <div class="invalid-feedback">
                            Por favor ingrese nombre del área.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="descripcion" class="form-label">
                            Descripción <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required placeholder="Ingrese descripción"></textarea>
                        <div class="invalid-feedback">
                            Por favor ingrese descripción.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="responsable" class="form-label">
                            Responsable
                        </label>
                        <input type="text" class="form-control" id="responsable" name="responsable" placeholder="Ingrese responsable">
                        <div class="invalid-feedback">
                            Por favor ingrese responsable.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="estado" class="form-label">
                            Estado <span class="required">*</span>
                        </label>
                        <select class="form-select" id="estado" name="estado" required>
                            <option value="">Seleccione una opción</option>
                            <option value="activa">Activa</option>
                            <option value="inactiva">Inactiva</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese estado.
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="create-form-actions">
                    <div class="action-buttons">
                        <a href="{{ url_for('listar_areas') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Area
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formularios Bootstrap
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>