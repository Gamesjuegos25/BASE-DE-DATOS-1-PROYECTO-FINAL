{% extends "base.html" %}

{% block content %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/create-forms.css') }}">


<div class="content-wrapper">
    <div class="page-header">
        <h1 class="page-title">Editar Área</h1>
        <p class="page-subtitle">Modifica el nombre del área</p>
    </div>

    <div class="form-container">
        <div class="create-form-container">
<form method="post" action="{{ url_for('editar_area', area_id=area.id or area.id_area) }}">
            <div class="form-group">
                <label for="nombre" class="form-label required">Nombre del área</label>
                <input type="text" id="nombre" name="nombre" class="form-control" 
                       required maxlength="100" value="{{ area.nombre_area or area.nombre }}" placeholder="Ingrese el nombre del área">
                <div class="form-help">El nombre debe ser único y descriptivo</div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Guardar Cambios
                </button>
                <a href="{{ url_for('detalle_area', area_id=area.id or area.id_area) }}" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}