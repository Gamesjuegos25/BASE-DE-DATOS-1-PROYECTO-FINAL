{%% extends "base.html" %%}

{%% block head %%}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/sistema-unificado.css') }}">
{%% endblock %%}

{%% block title %%}Editar Auditoria - Sistema Constructora{%% endblock %%}

{%% block content %%}
<div class="page-container animate-fade-in">
    <!-- Header de página -->
    <div class="page-header">
        <div class="breadcrumb-nav">
            <a href="{{ url_for('dashboard') }}">Dashboard</a>
            <span class="breadcrumb-separator">/</span>
            <a href="{{ url_for('listar_auditorias') }}">Auditorias</a>
            <span class="breadcrumb-separator">/</span>
            <span>Editar</span>
        </div>
        <h1 class="page-title">
            <i class="fas fa-edit text-xanthous"></i>
            Editar Auditoria
        </h1>
        <p class="page-subtitle">Modifica la información del registro seleccionado</p>
    </div>

    {%% if auditoria %%}
    <!-- Formulario de edición -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">
                <i class="fas fa-form"></i>
                Información del Auditoria
            </h2>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ url_for('editar_auditorias', id=auditoria.id) }}" class="animate-slide-in">
                <div class="grid-container cols-2">
                    <div class="form-group">
                        <label class="form-label" for="nombre">
                            <i class="fas fa-tag"></i>
                            Nombre *
                        </label>
                        <input type="text" 
                               class="form-input" 
                               id="nombre" 
                               name="nombre" 
                               required
                               value="{{ request.form.nombre if request.form else auditoria.nombre }}"
                               placeholder="Ingrese el nombre">
                        <div class="form-help">Campo obligatorio</div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="estado">
                            <i class="fas fa-toggle-on"></i>
                            Estado
                        </label>
                        <select class="form-select" id="estado" name="estado">
                            <option value="activo" {{ 'selected' if (request.form.estado if request.form else auditoria.estado) == 'activo' else '' }}>Activo</option>
                            <option value="inactivo" {{ 'selected' if (request.form.estado if request.form else auditoria.estado) == 'inactivo' else '' }}>Inactivo</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="descripcion">
                        <i class="fas fa-align-left"></i>
                        Descripción
                    </label>
                    <textarea class="form-textarea" 
                              id="descripcion" 
                              name="descripcion" 
                              placeholder="Descripción opcional">{{ request.form.descripcion if request.form else auditoria.descripcion }}</textarea>
                </div>
                
                <!-- Botones de acción -->
                <div class="flex justify-between gap-4">
                    <div class="flex gap-2">
                        <a href="{{ url_for('listar_auditorias') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Volver a Lista
                        </a>
                        <a href="{{ url_for('ver_auditorias', id=auditoria.id) }}" class="btn btn-primary">
                            <i class="fas fa-eye"></i>
                            Ver Detalles
                        </a>
                    </div>
                    <button type="submit" class="btn btn-accent">
                        <i class="fas fa-save"></i>
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
    {%% else %%}
    <div class="alert alert-error">
        <i class="fas fa-exclamation-triangle"></i>
        No se encontró el registro solicitado.
    </div>
    {%% endif %%}
</div>
{%% endblock %%}