{% extends "base.html" %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Avances - Sistema Constructora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/create-forms.css') }}" rel="stylesheet">
</head>
<body>
    <div class="create-form-container">
        <!-- Header -->
        <div class="create-page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('listar_avances') }}">
                            <i class="fas fa-list"></i> Avances
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-plus"></i> Crear Avance
                    </li>
                </ol>
            </nav>
            
            <div class="create-title-section">
                <h1 class="create-title">
                    <i class="fas fa-plus-circle"></i>
                    Crear Avance
                </h1>
                <p class="create-subtitle">Complete el formulario para registrar una nueva avance</p>
            </div>
        </div>

        <!-- Formulario -->
        <div class="create-form-card">
            <form method="POST" action="{{ url_for('crear_avance') }}" class="needs-validation" novalidate>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="obra_id" class="form-label">
                            Obra <span class="required">*</span>
                        </label>
                        <select class="form-select" id="obra_id" name="obra_id" required>
                            <option value="">Seleccione una opción</option>
                            {%- for item in obras %}
                            <option value="{{ item[0] }}">{{ item[1] }}</option>
                            {%- endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese obra.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="fecha" class="form-label">
                            Fecha <span class="required">*</span>
                        </label>
                        <input type="date" class="form-control" id="fecha" name="fecha" required placeholder="Ingrese fecha">
                        <div class="invalid-feedback">
                            Por favor ingrese fecha.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="porcentaje_avance" class="form-label">
                            Porcentaje de Avance (%) <span class="required">*</span>
                        </label>
                        <input type="number" class="form-control" id="porcentaje_avance" name="porcentaje_avance" required step="0.1" min="0" max="100" placeholder="Ingrese porcentaje de avance (%)">
                        <div class="invalid-feedback">
                            Por favor ingrese porcentaje de avance (%).
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="descripcion" class="form-label">
                            Descripción del Avance <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="4" required placeholder="Ingrese descripción del avance"></textarea>
                        <div class="invalid-feedback">
                            Por favor ingrese descripción del avance.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="observaciones" class="form-label">
                            Observaciones
                        </label>
                        <textarea class="form-control" id="observaciones" name="observaciones" rows="3" placeholder="Ingrese observaciones"></textarea>
                        <div class="invalid-feedback">
                            Por favor ingrese observaciones.
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="create-form-actions">
                    <div class="action-buttons">
                        <a href="{{ url_for('listar_avances') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Avance
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formularios Bootstrap
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>