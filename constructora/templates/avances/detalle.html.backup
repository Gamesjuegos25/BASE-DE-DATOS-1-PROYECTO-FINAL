{% extends "base.html" %}

{% block content %}
<div class="dashboard-header">
    <h1><i class="fas fa-eye"></i> Avance #{{ avance.id_avance or avance.id }}</h1>
    <a class="btn btn-secondary" href="{{ url_for('listar_avances') }}">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Fecha:</strong> {{ avance.fecha_avance }}</p>
        <p><strong>% Físico:</strong> {{ avance.porcentaje_fisico_avance }}%</p>
        <p><strong>% Financiero:</strong> {{ avance.porcentaje_financiero_avance }}%</p>
        <p><strong>Obra:</strong> {{ avance.nombre_obra or 'Sin obra' }}</p>
        <div class="form-actions">
            <a class="btn btn-edit" href="{{ url_for('editar_avance', id=avance.id_avance or avance.id) }}"><i class="fas fa-edit"></i> Editar</a>
            <form class="inline-form" method="post" action="{{ url_for('eliminar_avance', id=avance.id_avance or avance.id) }}" onsubmit="return confirm('¿Eliminar este avance?');">
                <button class="btn btn-danger" type="submit"><i class="fas fa-trash"></i> Eliminar</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}