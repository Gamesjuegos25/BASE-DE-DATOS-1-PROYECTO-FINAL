{% extends "base.html" %}

{% block content %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/create-forms.css') }}">


<div class="dashboard-header">
    <h1><i class="fas fa-edit"></i> Editar Avance #{{ avance.id_avance or avance.id }}</h1>
    <a class="btn btn-secondary" href="{{ url_for('ver_avance', id=avance.id_avance or avance.id) }}">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="create-form-container">
<form method="post" class="form-card">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="fecha_avance">Fecha</label>
            <input type="date" name="fecha_avance" id="fecha_avance" class="form-control" value="{{ avance.fecha_avance|default('', true) }}" />
        </div>
        <div class="form-group col-md-4">
            <label for="porcentaje_fisico">% FÃ­sico</label>
            <input type="number" step="0.01" min="0" max="100" name="porcentaje_fisico" id="porcentaje_fisico" class="form-control" value="{{ avance.porcentaje_fisico_avance }}" />
        </div>
        <div class="form-group col-md-4">
            <label for="porcentaje_financiero">% Financiero</label>
            <input type="number" step="0.01" min="0" max="100" name="porcentaje_financiero" id="porcentaje_financiero" class="form-control" value="{{ avance.porcentaje_financiero_avance }}" />
        </div>
    </div>
    <div class="form-group">
        <label for="obra_id">Obra (opcional)</label>
        <select id="obra_id" name="obra_id" class="form-control">
            <option value="">Sin obra</option>
            {% for o in obras %}
            {% set oid = o.id_obra or o.id %}
            <option value="{{ oid }}" {% if avance.id_obra and avance.id_obra == oid %}selected{% endif %}>
                {{ o.nombre_obra or o.nombre }}
            </option>
            {% endfor %}
        </select>
    </div>
    <div class="form-actions">
        <button class="btn btn-primary" type="submit"><i class="fas fa-save"></i> Guardar</button>
        <a class="btn btn-secondary" href="{{ url_for('ver_avance', id=avance.id_avance or avance.id) }}">Cancelar</a>
    </div>
</form>
</div>

{% endblock %}