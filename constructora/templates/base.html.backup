<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Warm Autumn Glow Theme Meta -->
    <meta name="theme-color" content="#003049">
    <meta name="msapplication-navbutton-color" content="#003049">
    <meta name="apple-mobile-web-app-status-bar-style" content="#003049">
    <style>
        /* Immediate color application to prevent flashing */
        body { background-color: #eae2b7 !important; }
        .header { background: linear-gradient(135deg, #003049, #00679f) !important; }
        .sidebar { background: linear-gradient(180deg, #001c2b, #003049) !important; }
    </style>
    <title>{% block title %}Sistema ERP Constructora{% endblock %}</title>
    <!-- Warm Autumn Glow Theme -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/warm-autumn-theme.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/tailwind-warm-autumn.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/warm-autumn-custom-properties.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/enhanced-tables.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/detail-page.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/list-pages.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/form-pages.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/dashboard.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/theme-override.css') }}">
    <!-- Fallback to original styles if needed -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/table-styles.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <div class="app-layout">
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <div>
                    <h1><i class="fas fa-building text-prussian-blue"></i> ERP Constructora</h1>
                    <div class="header-subtitle">Sistema Integral de Gestión</div>
                </div>
                <div class="header-right">
                    <a href="{{ url_for('logout') }}" class="logout-btn transition-all hover:scale-110 hover:-translate-y-1" title="Cerrar Sesión">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                    <div class="user-menu" onclick="toggleUserDropdown()">
                        <div class="user-avatar">
                            {{ (session.usuario_nombre or 'U')[0].upper() }}
                        </div>
                        <div class="user-info">
                            <span class="user-name">{{ session.usuario_nombre or 'Usuario' }}</span>
                            <span class="user-role">{{ session.usuario_rol or 'Sin rol' }}</span>
                        </div>
                        <i class="fas fa-chevron-down dropdown-arrow"></i>
                        
                        <!-- Dropdown Menu -->
                        <div class="user-dropdown" id="userDropdown">
                            <div class="dropdown-header">
                                <div class="user-avatar-large">
                                    {{ (session.usuario_nombre or 'U')[0].upper() }}
                                </div>
                                <div>
                                    <div class="dropdown-name">{{ session.usuario_nombre or 'Usuario' }}</div>
                                    <div class="dropdown-email">{{ session.usuario_email or 'Sin email' }}</div>
                                </div>
                            </div>
                            
                            <div class="dropdown-divider"></div>
                            
                            <a href="{{ url_for('cambiar_password') }}" class="dropdown-item">
                                <i class="fas fa-key"></i>
                                <span>Cambiar Contraseña</span>
                            </a>
                            
                            {% if 'ADMIN_USUARIOS' in session.get('permisos', []) %}
                            <a href="{{ url_for('listar_usuarios_sistema') }}" class="dropdown-item">
                                <i class="fas fa-users-cog text-orange-wheel"></i>
                                <span>Gestión de Usuarios</span>
                            </a>
                            {% endif %}
                            
                            <a href="{{ url_for('reportes_academicos') }}" class="dropdown-item">
                                <i class="fas fa-chart-bar text-xanthous"></i>
                                <span>Reportes</span>
                            </a>
                            
                            <div class="dropdown-divider"></div>
                            
                            <a href="{{ url_for('logout') }}" class="dropdown-item text-fire-engine-red">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Cerrar Sesión</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-title">Módulos del Sistema</h3>
            </div>
            
            <nav class="sidebar-nav">
                <!-- Dashboard -->
                <div class="nav-item">
                    <a href="{{ url_for('dashboard') }}" class="nav-link {% if request.endpoint == 'dashboard' %}active{% endif %}">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                
                <!-- MÓDULO OBRAS Y PROYECTOS -->
                <div class="nav-section">
                    <div class="nav-title">📋 Obras & Proyectos</div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_obras') }}" class="nav-link {% if request.endpoint in ['listar_obras', 'crear_obra'] %}active{% endif %}">
                            <i class="nav-icon fas fa-building text-prussian-blue"></i>
                            <span>Obras</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_proyectos') }}" class="nav-link {% if request.endpoint in ['listar_proyectos', 'crear_proyecto'] %}active{% endif %}">
                            <i class="nav-icon fas fa-project-diagram"></i>
                            <span>Proyectos</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_actividades') }}" class="nav-link {% if request.endpoint in ['listar_actividades', 'crear_actividad'] %}active{% endif %}">
                            <i class="nav-icon fas fa-tasks"></i>
                            <span>Actividades</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_areas') }}" class="nav-link {% if request.endpoint in ['listar_areas', 'crear_area'] %}active{% endif %}">
                            <i class="nav-icon fas fa-layer-group"></i>
                            <span>Áreas</span>
                        </a>
                    </div>
                </div>
                
                <!-- MÓDULO RECURSOS HUMANOS -->
                <div class="nav-section">
                    <div class="nav-title">👥 Recursos Humanos</div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_empleados') }}" class="nav-link {% if request.endpoint in ['listar_empleados', 'crear_empleado'] %}active{% endif %}">
                            <i class="nav-icon fas fa-users text-orange-wheel"></i>
                            <span>Empleados</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_contratos') }}" class="nav-link {% if request.endpoint in ['listar_contratos', 'crear_contrato'] %}active{% endif %}">
                            <i class="nav-icon fas fa-file-contract"></i>
                            <span>Contratos</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_trabajos') }}" class="nav-link {% if request.endpoint in ['listar_trabajos', 'crear_trabajo'] %}active{% endif %}">
                            <i class="nav-icon fas fa-hammer text-orange-wheel"></i>
                            <span>Trabajos</span>
                        </a>
                    </div>
                </div>
                
                <!-- MÓDULO RECURSOS Y MATERIALES -->
                <div class="nav-section">
                    <div class="nav-title">📦 Recursos & Materiales</div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_materiales') }}" class="nav-link {% if request.endpoint in ['listar_materiales', 'crear_material'] %}active{% endif %}">
                            <i class="nav-icon fas fa-boxes text-vanilla-100"></i>
                            <span>Materiales</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_proveedores') }}" class="nav-link {% if request.endpoint in ['listar_proveedores', 'crear_proveedor'] %}active{% endif %}">
                            <i class="nav-icon fas fa-truck"></i>
                            <span>Proveedores</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_bodegas') }}" class="nav-link {% if request.endpoint in ['listar_bodegas', 'crear_bodega', 'ver_bodega', 'editar_bodega', 'asignar_bodega_obras'] %}active{% endif %}">
                            <i class="nav-icon fas fa-warehouse"></i>
                            <span>Bodegas</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_requisiciones') }}" class="nav-link {% if request.endpoint == 'listar_requisiciones' %}active{% endif %}">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <span>Requisiciones</span>
                        </a>
                    </div>
                </div>
                
                <!-- MÓDULO EQUIPOS Y VEHÍCULOS -->
                <div class="nav-section">
                    <div class="nav-title">🚛 Equipos & Vehículos</div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_vehiculos') }}" class="nav-link {% if request.endpoint in ['listar_vehiculos', 'crear_vehiculo'] %}active{% endif %}">
                            <i class="nav-icon fas fa-car"></i>
                            <span>Vehículos</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_equipos') }}" class="nav-link {% if request.endpoint in ['listar_equipos', 'crear_equipo'] %}active{% endif %}">
                            <i class="nav-icon fas fa-tools text-xanthous-100"></i>
                            <span>Equipos</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_movimientos_materiales') }}" class="nav-link {% if request.endpoint == 'listar_movimientos_materiales' %}active{% endif %}">
                            <i class="nav-icon fas fa-exchange-alt"></i>
                            <span>Movimientos</span>
                        </a>
                    </div>
                </div>
                
                <!-- MÓDULO CONTROL Y SEGUIMIENTO -->
                <div class="nav-section">
                    <div class="nav-title">📊 Control & Seguimiento</div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_bitacoras') }}" class="nav-link {% if request.endpoint in ['listar_bitacoras', 'crear_bitacora'] %}active{% endif %}">
                            <i class="nav-icon fas fa-book"></i>
                            <span>Bitácoras</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_incidentes') }}" class="nav-link {% if request.endpoint in ['listar_incidentes', 'crear_incidente'] %}active{% endif %}">
                            <i class="nav-icon fas fa-exclamation-triangle text-fire-engine-red"></i>
                            <span>Incidentes</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_avances') }}" class="nav-link {% if request.endpoint in ['listar_avances', 'crear_avance'] %}active{% endif %}">
                            <i class="nav-icon fas fa-chart-line text-xanthous"></i>
                            <span>Avances</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_presupuestos') }}" class="nav-link {% if request.endpoint in ['listar_presupuestos', 'crear_presupuesto'] %}active{% endif %}">
                            <i class="nav-icon fas fa-coins"></i>
                            <span>Presupuestos</span>
                        </a>
                    </div>
                </div>
                
                <!-- MÓDULO ADMINISTRACIÓN -->
                <div class="nav-section">
                    <div class="nav-title">⚙️ Administración</div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_usuarios_sistema') }}" class="nav-link {% if request.endpoint in ['listar_usuarios_sistema','crear_usuario_sistema_route','bloquear_usuario_route','desbloquear_usuario_route','editar_usuario_sistema_route'] %}active{% endif %}">
                            <i class="nav-icon fas fa-user-cog"></i>
                            <span>Usuarios</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('listar_auditorias') }}" class="nav-link {% if request.endpoint == 'listar_auditorias' %}active{% endif %}">
                            <i class="nav-icon fas fa-shield-alt"></i>
                            <span>Auditorías</span>
                        </a>
                    </div>
                </div>
                
                <!-- MÓDULO REPORTES -->
                <div class="nav-section">
                    <div class="nav-title">📈 Reportes</div>
                    <div class="nav-item">
                        <a href="{{ url_for('reportes_academicos') }}" class="nav-link {% if request.endpoint == 'reportes_academicos' %}active{% endif %}">
                            <i class="nav-icon fas fa-graduation-cap"></i>
                            <span>Académicos</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="{{ url_for('reportes_sistema_completo') }}" class="nav-link {% if request.endpoint == 'reportes_sistema_completo' %}active{% endif %}">
                            <i class="nav-icon fas fa-chart-bar text-xanthous"></i>
                            <span>Sistema Completo</span>
                        </a>
                    </div>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-wrapper fade-in-up">
                <!-- Flash Messages -->
                {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                        {% for category, message in messages %}
                            <div class="alert alert-{{ category }} fade-in">
                                <i class="alert-icon fas fa-{{ 'check-circle' if category == 'success' else 'exclamation-triangle' if category == 'error' or category == 'danger' else 'info-circle' }}"></i>
                                <div>{{ message }}</div>
                                <button class="btn btn-warm-primary" class="modal-close" onclick="this.parentElement.remove()">×</button>
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endwith %}
                
                {% block content %}{% endblock %}
            </div>
        </main>
    </div>

    <!-- Warm Autumn Theme JavaScript -->
    <script src="{{ url_for('static', filename='js/warm-autumn-theme.js') }}"></script>
    <script src="{{ url_for('static', filename='js/dynamic-color-applicator.js') }}"></script>
    
    <script>
        // Auto cerrar alertas después de 5 segundos (mejorado con tema)
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Funcionalidad de toggle para el menú móvil
        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.createElement('button');
            menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
            menuToggle.className = 'menu-toggle';
            menuToggle.style.cssText = `
                display: none;
                position: fixed;
                top: 20px;
                left: 20px;
                z-index: 1001;
                background: var(--primary-color);
                color: white;
                border: none;
                padding: 10px;
                border-radius: 5px;
                cursor: pointer;
            `;
            
            // Mostrar solo en móviles
            const mediaQuery = window.matchMedia('(max-width: 768px)');
            function handleMobileMenu(e) {
                if (e.matches) {
                    menuToggle.style.display = 'block';
                    document.body.appendChild(menuToggle);
                } else {
                    if (document.body.contains(menuToggle)) {
                        document.body.removeChild(menuToggle);
                    }
                }
            }
            
            mediaQuery.addEventListener('change', handleMobileMenu);
            handleMobileMenu(mediaQuery);
            
            menuToggle.addEventListener('click', function() {
                const sidebar = document.querySelector('.sidebar');
                sidebar.classList.toggle('active');
            });
        });
    </script>
</body>
</html>
