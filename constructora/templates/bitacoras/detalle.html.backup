{% extends "base.html" %}
{% block title %}Detalle Bitácora{% endblock %}
{% block content %}
<div class="page-header">
  <nav class="breadcrumb">
    <a href="{{ url_for('dashboard') }}">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="{{ url_for('listar_bitacoras') }}">Bitácoras</a>
    <span class="breadcrumb-separator">/</span>
    <span>Detalle</span>
  </nav>
  <h1 class="page-title">📋 Bitácora #{{ bitacora.id_bitacora }} <small class="text-muted">{{ bitacora.nombre_obra or 'General' }}</small></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-clipboard-list"></i> Información de la Bitácora</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4"><i class="fas fa-calendar"></i> Fecha Registro</dt>
          <dd class="col-sm-8">
            {% if bitacora.fecha_bitacora %}
              <strong>{{ bitacora.fecha_bitacora.strftime('%d/%m/%Y') if bitacora.fecha_bitacora is not string else bitacora.fecha_bitacora }}</strong>
            {% else %}
              <span class="text-muted">Sin fecha</span>
            {% endif %}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-layer-group"></i> Tipo Actividad</dt>
          <dd class="col-sm-8">
            {% if bitacora.tipo_actividad %}
              <span class="badge badge-primary">{{ bitacora.tipo_actividad }}</span>
            {% else %}
              <span class="text-muted">No especificado</span>
            {% endif %}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Estado</dt>
          <dd class="col-sm-8">
            {% set estado_class = {
              'Pendiente': 'warning',
              'En Proceso': 'info',
              'Completada': 'success',
              'Cancelada': 'danger'
            } %}
            <span class="badge badge-{{ estado_class.get(bitacora.estado_bitacora, 'secondary') }}">
              {{ bitacora.estado_bitacora or 'No especificado' }}
            </span>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-exclamation-circle"></i> Prioridad</dt>
          <dd class="col-sm-8">
            {% if bitacora.prioridad %}
              {% set prioridad_class = {
                'Alta': 'danger',
                'Media': 'warning', 
                'Baja': 'success'
              } %}
              <span class="badge badge-{{ prioridad_class.get(bitacora.prioridad, 'secondary') }}">
                {{ bitacora.prioridad }}
              </span>
            {% else %}
              <span class="text-muted">No definida</span>
            {% endif %}
          </dd>
          
          {% if bitacora.tiempo_estimado or bitacora.tiempo_real %}
          <dt class="col-sm-4"><i class="fas fa-clock"></i> Tiempos</dt>
          <dd class="col-sm-8">
            {% if bitacora.tiempo_estimado %}
              <small class="text-muted">Estimado:</small> <strong class="text-info">{{ bitacora.tiempo_estimado }}</strong>
            {% endif %}
            {% if bitacora.tiempo_real %}
              <br><small class="text-muted">Real:</small> <strong class="text-success">{{ bitacora.tiempo_real }}</strong>
            {% endif %}
          </dd>
          {% endif %}
        </dl>
      </div>
    </div>
    
    {% if bitacora.observaciones_bitacora %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-comment-alt"></i> Observaciones</h5>
      </div>
      <div class="card-body">
        <div class="observation-detail">
          {{ bitacora.observaciones_bitacora }}
        </div>
      </div>
    </div>
    {% endif %}
    
    {% if bitacora.materiales_utilizados %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-boxes"></i> Materiales Utilizados</h5>
      </div>
      <div class="card-body">
        <div class="materials-list">
          {{ bitacora.materiales_utilizados }}
        </div>
      </div>
    </div>
    {% endif %}
    
    {% if bitacora.clima_condiciones %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-cloud-sun"></i> Condiciones Climáticas</h5>
      </div>
      <div class="card-body">
        <p class="mb-0"><i class="fas fa-thermometer-half text-primary"></i> {{ bitacora.clima_condiciones }}</p>
      </div>
    </div>
    {% endif %}
  </div>
  
  <div class="col-md-4">
    {% if bitacora.nombre_obra %}
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-building"></i> Proyecto Asociado</h5>
      </div>
      <div class="card-body text-center">
        <h6 class="text-primary">{{ bitacora.nombre_obra }}</h6>
        {% if bitacora.ubicacion_obra %}
          <small class="text-muted"><i class="fas fa-map-marker-alt"></i> {{ bitacora.ubicacion_obra }}</small>
        {% endif %}
        {% if bitacora.estado_obra %}
          <div class="mt-2">
            <span class="badge badge-secondary">{{ bitacora.estado_obra }}</span>
          </div>
        {% endif %}
        <div class="mt-3">
          <a href="{{ url_for('ver_obra', id=bitacora.id_obra) }}" class="btn btn-sm btn-outline-primary">
            <i class="fas fa-eye"></i> Ver Proyecto
          </a>
        </div>
      </div>
    </div>
    {% endif %}
    
    {% if bitacora.nombre_empleado %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-user-hard-hat"></i> Responsable</h5>
      </div>
      <div class="card-body text-center">
        <h6 class="text-dark">{{ bitacora.nombre_empleado }} {{ bitacora.apellido_empleado or '' }}</h6>
        {% if bitacora.cargo_empleado %}
          <small class="text-muted">{{ bitacora.cargo_empleado }}</small>
        {% endif %}
        <div class="mt-3">
          <a href="{{ url_for('ver_empleado', id=bitacora.id_empleado) }}" class="btn btn-sm btn-outline-info">
            <i class="fas fa-user"></i> Ver Perfil
          </a>
        </div>
      </div>
    </div>
    {% endif %}
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Fechas</h5>
      </div>
      <div class="card-body">
        <div class="date-info">
          <div class="mb-2">
            <small class="text-muted">Creación:</small><br>
            {% if bitacora.fecha_creacion %}
              <strong class="text-info">{{ bitacora.fecha_creacion.strftime('%d/%m/%Y %H:%M') if bitacora.fecha_creacion is not string else bitacora.fecha_creacion }}</strong>
            {% else %}
              <span class="text-muted">No disponible</span>
            {% endif %}
          </div>
          
          <div class="mb-2">
            <small class="text-muted">Registro:</small><br>
            {% if bitacora.fecha_bitacora %}
              <strong class="text-success">{{ bitacora.fecha_bitacora.strftime('%d/%m/%Y') if bitacora.fecha_bitacora is not string else bitacora.fecha_bitacora }}</strong>
            {% else %}
              <span class="text-muted">Sin fecha</span>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
      </div>
      <div class="card-body">
        <div class="d-flex flex-column gap-2">
          <a class="btn btn-primary" href="{{ url_for('editar_bitacora', id=bitacora.id_bitacora) }}">
            <i class="fas fa-edit"></i> Editar Bitácora
          </a>
          <a class="btn btn-info" href="#">
            <i class="fas fa-file-pdf"></i> Exportar PDF
          </a>
          <a class="btn btn-warning" href="#">
            <i class="fas fa-copy"></i> Duplicar Entrada
          </a>
          <a class="btn btn-secondary" href="{{ url_for('listar_bitacoras') }}">
            <i class="fas fa-arrow-left"></i> Volver a Lista
          </a>
          <form action="{{ url_for('eliminar_bitacora', id=bitacora.id_bitacora) }}" method="post" onsubmit="return confirm('¿Eliminar esta bitácora?');" class="mt-2">
            <button class="btn btn-danger w-100" type="submit">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.observation-detail {
  background-color: #f8f9fa;
  padding: 1rem;
  border-radius: 0.375rem;
  border-left: 4px solid #007bff;
  line-height: 1.6;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.materials-list {
  background-color: #fff3cd;
  padding: 1rem;
  border-radius: 0.375rem;
  border-left: 4px solid #ffc107;
  line-height: 1.6;
}

.date-info {
  font-size: 0.9rem;
}

.card-header h5 {
  color: #495057;
}

.badge {
  font-size: 0.9rem;
}

.gap-2 > * + * {
  margin-top: 0.5rem;
}
</style>
{% endblock %}
