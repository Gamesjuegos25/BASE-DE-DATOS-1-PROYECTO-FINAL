<!-- templates/bitacoras/listar.html -->
{% extends "base.html" %}

{% block title %}Bitácoras de Obra{% endblock %}

{% block content %}
<div class="page-header">
    <div class="header-content">
        <div class="header-left">
            <h1 class="page-title">
                <i class="fas fa-list"></i>
                Gestión de Bitacoras
            </h1>
            <p class="page-subtitle">Control y administración de bitacoras</p>
        </div>
        <div class="header-actions">
            <a href="{{ url_for('crear_bitacora') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nuevo Bitacora
            </a>
        </div>
</div>

<!-- Estadísticas del Módulo -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon bg-blue">
            <i class="fas fa-list"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ datos|length or 0 }}</div>
            <div class="stat-label">Total Registros</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-green">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ datos|length or 0 }}</div>
            <div class="stat-label">Activos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-orange">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">0</div>
            <div class="stat-label">Pendientes</div>
        </div>
    </div>
</div>

</div>


<div class="dashboard-header">
    <h1><i class="fas fa-book"></i> Bitácoras de Obra</h1>
    <a href="{{ url_for('crear_bitacora') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nueva Entrada
    </a>
</div>

<div class="content-grid">
    <div class="stats-cards">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="stat-info">
                <h3>{{ bitacoras|length }}</h3>
                <p>Total Entradas</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar-day"></i>
            </div>
            <div class="stat-info">
                <h3>{{ bitacoras|length }}</h3>
                <p>Registros</p>
            </div>
        </div>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Obra Asociada</th>
                    <th>Observaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for bitacora in bitacoras %}
                <tr>
                    <td>
                        <strong>{{ bitacora.fecha_bitacora.strftime('%d/%m/%Y') if bitacora.fecha_bitacora.strftime else bitacora.fecha_bitacora }}</strong>
                    </td>
                    <td>
                        {% if bitacora.nombre_obra %}
                            <span class="badge badge-info">{{ bitacora.nombre_obra }}</span>
                        {% else %}
                            <span class="text-muted">General</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="observation-text">
                            {{ bitacora.observaciones_bitacora[:150] }}
                            {% if bitacora.observaciones_bitacora|length > 150 %}...{% endif %}
                        </div>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="{{ url_for('ver_bitacora', id=bitacora.id or bitacora.bitacora_id or bitacora.id_bitacora) }}" 
                               class="btn-action btn-view" title="Ver Completa">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ url_for('editar_bitacora', id=bitacora.id or bitacora.bitacora_id or bitacora.id_bitacora) }}" 
                               class="btn-action btn-edit" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="{{ url_for('eliminar_bitacora', id=bitacora.id or bitacora.bitacora_id or bitacora.id_bitacora) }}" 
                                  method="POST" class="inline-form" 
                                  onsubmit="return confirm('¿Estás seguro de eliminar esta bitácora?');">
                                <button type="submit" class="btn-action btn-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="text-center">
                        <div class="empty-state">
                            <i class="fas fa-book fa-3x"></i>
                            <h3>No hay entradas de bitácora</h3>
                            <p>Comienza registrando las actividades diarias</p>
                            <a href="{{ url_for('crear_bitacora') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Primera Entrada
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<style>
.observation-text {
    max-width: 300px;
    line-height: 1.4;
    color: #555;
}

.badge {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
}

.badge-info {
    background-color: #17a2b8;
    color: white;
}

.empty-state {
    padding: 3rem 2rem;
    color: #6c757d;
}

.empty-state i {
    color: #dee2e6;
    margin-bottom: 1rem;
}

.empty-state h3 {
    margin-bottom: 1rem;
    color: #495057;
}
</style>
{% endblock %}