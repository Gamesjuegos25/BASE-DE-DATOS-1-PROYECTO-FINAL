{%% extends "base.html" %%}

{%% block head %%}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/sistema-unificado.css') }}">
{%% endblock %%}

{%% block title %%}Compras - Sistema Constructora{%% endblock %%}

{%% block content %%}
<div class="page-container animate-fade-in">
    <!-- Header de página -->
    <div class="page-header">
        <div class="breadcrumb-nav">
            <a href="{{ url_for('dashboard') }}">Dashboard</a>
            <span class="breadcrumb-separator">/</span>
            <span>Compras</span>
        </div>
        <h1 class="page-title">
            <i class="fas fa-list text-xanthous"></i>
            Gestión de Compras
        </h1>
        <p class="page-subtitle">Administra todos los registros de compras</p>
    </div>

    <!-- Acciones principales -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">
                <i class="fas fa-table"></i>
                Lista de Compras
            </h2>
            <a href="{{ url_for('crear_compras') }}" class="btn btn-accent">
                <i class="fas fa-plus"></i>
                Agregar compra
            </a>
        </div>
        <div class="card-body">
            {%% if compras %%}
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th>Fecha Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {%% for item in compras %%}
                        <tr>
                            <td><span class="badge badge-info">{{ item.id or 'N/A' }}</span></td>
                            <td>{{ item.nombre or 'Sin nombre' }}</td>
                            <td>
                                <span class="badge badge-success">Activo</span>
                            </td>
                            <td>{{ item.fecha_creacion or 'N/A' }}</td>
                            <td>
                                <div class="flex gap-2">
                                    <a href="{{ url_for('ver_compras', id=item.id) }}" 
                                       class="btn btn-primary" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ url_for('editar_compras', id=item.id) }}" 
                                       class="btn btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-danger" 
                                            onclick="confirmarEliminacion({{ item.id }})" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {%% endfor %%}
                    </tbody>
                </table>
            </div>
            {%% else %%}
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                No hay registros de compras disponibles. 
                <a href="{{ url_for('crear_compras') }}">¡Crea el primero!</a>
            </div>
            {%% endif %%}
        </div>
    </div>
</div>

<script>
function confirmarEliminacion(id) {
    if (confirm('¿Estás seguro de que deseas eliminar este registro?')) {
        fetch(`{{ url_for('eliminar_compras', id=0) }}`.replace('0', id), {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Error al eliminar el registro');
            }
        });
    }
}
</script>
{%% endblock %%}