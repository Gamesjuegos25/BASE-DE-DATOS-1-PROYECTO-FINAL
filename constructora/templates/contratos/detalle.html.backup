{% extends "base.html" %}
{% block title %}Detalle Contrato{% endblock %}
{% block content %}
<div class="page-header">
  <nav class="breadcrumb">
    <a href="{{ url_for('dashboard') }}">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="{{ url_for('listar_contratos') }}">Contratos</a>
    <span class="breadcrumb-separator">/</span>
    <span>Detalle</span>
  </nav>
  <h1 class="page-title">📄 Contrato #{{ contrato.id_contrato }} <small class="text-muted">{{ contrato.nombre_obra or 'Sin obra' }}</small></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-file-contract"></i> Información del Contrato</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4"><i class="fas fa-hashtag"></i> Número</dt>
          <dd class="col-sm-8">
            <strong class="text-primary">#{{ contrato.id_contrato }}</strong>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-calendar-alt"></i> Fecha Inicio</dt>
          <dd class="col-sm-8">
            {% if contrato.fecha_inicio_contrato %}
              {{ contrato.fecha_inicio_contrato.strftime('%d/%m/%Y') if contrato.fecha_inicio_contrato is not string else contrato.fecha_inicio_contrato }}
            {% else %}
              <span class="text-muted">No especificada</span>
            {% endif %}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-calendar-check"></i> Fecha Fin</dt>
          <dd class="col-sm-8">
            {% if contrato.fecha_fin_contrato %}
              {{ contrato.fecha_fin_contrato.strftime('%d/%m/%Y') if contrato.fecha_fin_contrato is not string else contrato.fecha_fin_contrato }}
            {% else %}
              <span class="text-muted">No especificada</span>
            {% endif %}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-calendar-times"></i> Vencimiento</dt>
          <dd class="col-sm-8">
            {% if contrato.fecha_vencimiento_contrato %}
              {% set vence_pronto = (contrato.fecha_vencimiento_contrato - now()).days < 30 if contrato.fecha_vencimiento_contrato is not string else false %}
              <span class="{% if vence_pronto %}text-danger{% else %}text-info{% endif %}">
                {{ contrato.fecha_vencimiento_contrato.strftime('%d/%m/%Y') if contrato.fecha_vencimiento_contrato is not string else contrato.fecha_vencimiento_contrato }}
              </span>
            {% else %}
              <span class="text-muted">No especificada</span>
            {% endif %}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Estado</dt>
          <dd class="col-sm-8">
            {% set estado_class = {
              'Activo': 'success',
              'Pendiente': 'warning',
              'Terminado': 'info',
              'Cancelado': 'danger'
            } %}
            <span class="badge badge-{{ estado_class.get(contrato.estado_contrato, 'secondary') }}">
              {{ contrato.estado_contrato or 'No especificado' }}
            </span>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-money-bill-wave"></i> Tipo de Pago</dt>
          <dd class="col-sm-8">
            <span class="badge badge-info">{{ contrato.tipo_pago_contrato or 'No especificado' }}</span>
          </dd>
        </dl>
      </div>
    </div>
    
    {% if contrato.descripcion_contrato %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-align-left"></i> Descripción</h5>
      </div>
      <div class="card-body">
        <p class="mb-0">{{ contrato.descripcion_contrato }}</p>
      </div>
    </div>
    {% endif %}
    
    {% if contrato.condiciones_especiales %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-list-ul"></i> Condiciones Especiales</h5>
      </div>
      <div class="card-body">
        <p class="mb-0">{{ contrato.condiciones_especiales }}</p>
      </div>
    </div>
    {% endif %}
    
    {% if contrato.clausulas_penalizacion %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-exclamation-triangle text-warning"></i> Cláusulas de Penalización</h5>
      </div>
      <div class="card-body">
        <p class="mb-0">{{ contrato.clausulas_penalizacion }}</p>
      </div>
    </div>
    {% endif %}
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Información Financiera</h5>
      </div>
      <div class="card-body text-center">
        <div class="financial-info">
          {% if contrato.monto_total_contrato %}
          <div class="mb-3">
            <small class="text-muted">Monto Total:</small><br>
            <strong class="text-success h4">Q{{ "{:,.2f}".format(contrato.monto_total_contrato) }}</strong>
          </div>
          {% endif %}
          
          {% if contrato.porcentaje_anticipo %}
          <div class="mb-3">
            <small class="text-muted">Anticipo:</small><br>
            <strong class="text-info">{{ contrato.porcentaje_anticipo }}%</strong>
            {% if contrato.monto_total_contrato %}
              <br><small class="text-muted">Q{{ "{:,.2f}".format(contrato.monto_total_contrato * contrato.porcentaje_anticipo / 100) }}</small>
            {% endif %}
          </div>
          {% endif %}
        </div>
      </div>
    </div>
    
    {% if contrato.nombre_obra %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-building"></i> Proyecto Asociado</h5>
      </div>
      <div class="card-body">
        <div class="text-center">
          <h6 class="text-primary">{{ contrato.nombre_obra }}</h6>
          {% if contrato.ubicacion_obra %}
            <small class="text-muted"><i class="fas fa-map-marker-alt"></i> {{ contrato.ubicacion_obra }}</small>
          {% endif %}
          {% if contrato.estado_obra %}
            <div class="mt-2">
              <span class="badge badge-secondary">{{ contrato.estado_obra }}</span>
            </div>
          {% endif %}
          <div class="mt-3">
            <a href="{{ url_for('ver_obra', id=contrato.id_obra) }}" class="btn btn-sm btn-outline-primary">
              <i class="fas fa-eye"></i> Ver Obra
            </a>
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    
    {% if contrato.nombre_cliente %}
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-user"></i> Cliente</h5>
      </div>
      <div class="card-body">
        <div class="text-center">
          <h6 class="text-dark">{{ contrato.nombre_cliente }} {{ contrato.apellido_cliente or '' }}</h6>
          {% if contrato.telefono_cliente %}
            <div class="mb-2">
              <a href="tel:{{ contrato.telefono_cliente }}" class="btn btn-sm btn-outline-success">
                <i class="fas fa-phone"></i> {{ contrato.telefono_cliente }}
              </a>
            </div>
          {% endif %}
          {% if contrato.correo_cliente %}
            <div class="mb-2">
              <a href="mailto:{{ contrato.correo_cliente }}" class="btn btn-sm btn-outline-info">
                <i class="fas fa-envelope"></i> Email
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% endif %}
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
      </div>
      <div class="card-body">
        <div class="d-flex flex-column gap-2">
          <a class="btn btn-primary" href="{{ url_for('editar_contrato', id=contrato.id_contrato) }}">
            <i class="fas fa-edit"></i> Editar Contrato
          </a>
          <form action="{{ url_for('facturizar_contrato_route', id=contrato.id_contrato) }}" method="POST" class="m-0"
                onsubmit="return confirm('¿Deseas generar una factura para este contrato?');">
            <button type="submit" class="btn btn-success w-100">
              <i class="fas fa-file-invoice-dollar"></i> Generar Factura
            </button>
          </form>
          <a class="btn btn-info" href="#">
            <i class="fas fa-file-pdf"></i> Exportar PDF
          </a>
          <a class="btn btn-secondary" href="{{ url_for('listar_contratos') }}">
            <i class="fas fa-arrow-left"></i> Volver a Lista
          </a>
          <form action="{{ url_for('eliminar_contrato', id=contrato.id_contrato) }}" 
                method="POST" class="mt-2"
                onsubmit="return confirm('¿Estás seguro de eliminar este contrato?');">
            <button type="submit" class="btn btn-danger w-100">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.financial-info .h4 {
  font-size: 1.5rem;
}

.card-header h5 {
  color: #495057;
}

.badge {
  font-size: 0.9rem;
}

.gap-2 > * + * {
  margin-top: 0.5rem;
}
</style>
{% endblock %}
