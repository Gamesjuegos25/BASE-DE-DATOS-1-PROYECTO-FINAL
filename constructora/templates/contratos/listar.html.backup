{% extends "base.html" %}

{% block title %}Contratos - Sistema Constructora{% endblock %}

{% block content %}
<div class="container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <a href="{{ url_for('dashboard') }}">Dashboard</a> /
        <span>Contratos</span>
    </nav>

    <div class="page-header">
        <div>
            <h1><i class="fas fa-file-contract"></i> Gestión de Contratos</h1>
            <p class="subtitle">Administra los contratos de obra</p>
        </div>
        <a href="{{ url_for('crear_contrato') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Contrato
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-file-contract"></i>
            </div>
            <div class="stat-info">
                <h3>{{ contratos|length }}</h3>
                <p>Contratos Totales</p>
            </div>
        </div>

<!-- Estadísticas del Módulo -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon bg-blue">
            <i class="fas fa-list"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ contratos|length or 0 }}</div>
            <div class="stat-label">Total Contratos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-green">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ contratos|length or 0 }}</div>
            <div class="stat-label">Activos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-orange">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">0</div>
            <div class="stat-label">Pendientes</div>
        </div>
    </div>
</div>

    </div>

    <!-- Tabla de Contratos -->
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-list"></i> Lista de Contratos</h2>
        </div>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Tipo de Pago</th>
                        <th>Obra</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% if contratos %}
                        {% for contrato in contratos %}
                        <tr>
                            <td>{{ contrato.id_contrato }}</td>
                            <td>{{ contrato.fecha_inicio_contrato }}</td>
                            <td>{{ contrato.fecha_fin_contrato or 'N/A' }}</td>
                            <td>{{ contrato.tipo_pago_contrato or 'No especificado' }}</td>
                            <td>
                                {% if contrato.nombre_obra %}
                                    <span class="badge badge-primary">{{ contrato.nombre_obra }}</span>
                                {% else %}
                                    <span class="badge badge-secondary">Sin obra asignada</span>
                                {% endif %}
                            </td>
                            <td class="actions">
                                <a href="{{ url_for('ver_contrato', id=contrato.id_contrato) }}" 
                                   class="btn-action btn-view" title="Ver detalle">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a href="{{ url_for('editar_contrato', id=contrato.id_contrato) }}" 
                                   class="btn-action btn-edit" title="Editar">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <form action="{{ url_for('facturizar_contrato_route', id=contrato.id_contrato) }}" 
                                      method="POST" class="inline-form"
                                      onsubmit="return confirm('¿Generar factura para este contrato?');">
                                    <button type="submit" class="btn-action btn-success" title="Generar factura">
                                        <i class="fas fa-file-invoice-dollar"></i> Facturar
                                    </button>
                                </form>
                                <form action="{{ url_for('eliminar_contrato', id=contrato.id_contrato) }}" 
                                      method="POST" class="inline-form" 
                                      onsubmit="return confirm('¿Estás seguro de eliminar este contrato?');">
                                    <button type="submit" class="btn-action btn-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No hay contratos registrados</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
