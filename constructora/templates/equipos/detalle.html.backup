{% extends "base.html" %}
{% block title %}Detalle Equipo{% endblock %}
{% block content %}
<div class="page-header">
  <nav class="breadcrumb">
    <a href="{{ url_for('dashboard') }}">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="{{ url_for('listar_equipos') }}">Equipos</a>
    <span class="breadcrumb-separator">/</span>
    <span>Detalle</span>
  </nav>
  <h1 class="page-title">üîß {{ equipo.nombre or 'Equipo' }} <small class="text-muted">ID: {{ equipo.id_equipo }}</small></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-tools"></i> Informaci√≥n del Equipo</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4"><i class="fas fa-tag"></i> Nombre</dt>
          <dd class="col-sm-8">
            <strong>{{ equipo.nombre or 'N/D' }}</strong>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-layer-group"></i> Tipo</dt>
          <dd class="col-sm-8">
            <span class="badge badge-primary">{{ equipo.tipo or 'N/D' }}</span>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-certificate"></i> Marca</dt>
          <dd class="col-sm-8">
            {{ equipo.marca or 'No especificada' }}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-car"></i> Modelo</dt>
          <dd class="col-sm-8">
            {{ equipo.modelo or 'No especificado' }}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Estado</dt>
          <dd class="col-sm-8">
            {% set estado_class = {
              'Disponible': 'success',
              'En Uso': 'warning',
              'Mantenimiento': 'info',
              'Fuera de Servicio': 'danger'
            } %}
            <span class="badge badge-{{ estado_class.get(equipo.estado, 'success') }}">
              {{ equipo.estado or 'Disponible' }}
            </span>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-map-marker-alt"></i> Ubicaci√≥n</dt>
          <dd class="col-sm-8">
            {% if equipo.ubicacion %}
              <i class="fas fa-location-arrow text-primary"></i> {{ equipo.ubicacion }}
            {% else %}
              <span class="text-muted">No asignada</span>
            {% endif %}
          </dd>
        </dl>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-wrench"></i> Mantenimiento</h5>
      </div>
      <div class="card-body text-center">
        <div class="maintenance-info">
          <div class="mb-3">
            <small class="text-muted">√öltimo Mantenimiento:</small><br>
            {% if equipo.ultimo_mantenimiento %}
              <strong class="text-info">{{ equipo.ultimo_mantenimiento.strftime('%d/%m/%Y') if equipo.ultimo_mantenimiento is not string else equipo.ultimo_mantenimiento }}</strong>
            {% else %}
              <span class="text-muted">Sin registros</span>
            {% endif %}
          </div>
          
          <div class="mb-3">
            {% if equipo.capacidad %}
              <small class="text-muted">Capacidad:</small><br>
              <strong class="text-primary">{{ equipo.capacidad }}</strong>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Estado Operativo</h5>
      </div>
      <div class="card-body text-center">
        <div class="operational-status">
          {% if equipo.estado == 'Disponible' %}
            <div class="alert alert-success mb-2">
              <i class="fas fa-check-circle"></i> Operativo
            </div>
          {% elif equipo.estado == 'En Uso' %}
            <div class="alert alert-warning mb-2">
              <i class="fas fa-tools"></i> En Operaci√≥n
            </div>
          {% elif equipo.estado == 'Mantenimiento' %}
            <div class="alert alert-info mb-2">
              <i class="fas fa-wrench"></i> En Mantenimiento
            </div>
          {% else %}
            <div class="alert alert-danger mb-2">
              <i class="fas fa-times-circle"></i> Fuera de Servicio
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
      </div>
      <div class="card-body">
        <div class="d-flex flex-column gap-2">
          <a class="btn btn-primary" href="{{ url_for('editar_equipo', id=equipo.id_equipo) }}">
            <i class="fas fa-edit"></i> Editar Equipo
          </a>
          <a class="btn btn-warning" href="#">
            <i class="fas fa-wrench"></i> Programar Mantenimiento
          </a>
          <a class="btn btn-info" href="#">
            <i class="fas fa-history"></i> Historial de Uso
          </a>
          <a class="btn btn-secondary" href="{{ url_for('listar_equipos') }}">
            <i class="fas fa-arrow-left"></i> Volver a Lista
          </a>
          <form action="{{ url_for('eliminar_equipo', id=equipo.id_equipo) }}" method="post" onsubmit="return confirm('¬øEliminar este equipo?');" class="mt-2">
            <button class="btn btn-danger w-100" type="submit">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.maintenance-info {
  font-size: 0.9rem;
}

.operational-status .alert {
  padding: 0.5rem;
  margin-bottom: 0.5rem;
}

.card-header h5 {
  color: #495057;
}

.badge {
  font-size: 0.9rem;
}

.gap-2 > * + * {
  margin-top: 0.5rem;
}
</style>
{% endblock %}
