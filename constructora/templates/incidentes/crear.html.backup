{% extends "base.html" %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Incidentes - Sistema Constructora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/create-forms.css') }}" rel="stylesheet">
</head>
<body>
    <div class="create-form-container">
        <!-- Header -->
        <div class="create-page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('listar_incidentes') }}">
                            <i class="fas fa-list"></i> Incidentes
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-plus"></i> Crear Incidente
                    </li>
                </ol>
            </nav>
            
            <div class="create-title-section">
                <h1 class="create-title">
                    <i class="fas fa-plus-circle"></i>
                    Crear Incidente
                </h1>
                <p class="create-subtitle">Complete el formulario para registrar una nueva incidente</p>
            </div>
        </div>

        <!-- Formulario -->
        <div class="create-form-card">
            <form method="POST" action="{{ url_for('crear_incidente') }}" class="needs-validation" novalidate>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="obra_id" class="form-label">
                            Obra <span class="required">*</span>
                        </label>
                        <select class="form-select" id="obra_id" name="obra_id" required>
                            <option value="">Seleccione una opción</option>
                            {%- for item in obras %}
                            <option value="{{ item[0] }}">{{ item[1] }}</option>
                            {%- endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese obra.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="empleado_id" class="form-label">
                            Empleado Reportante <span class="required">*</span>
                        </label>
                        <select class="form-select" id="empleado_id" name="empleado_id" required>
                            <option value="">Seleccione una opción</option>
                            {%- for item in empleados %}
                            <option value="{{ item[0] }}">{{ item[1] }}</option>
                            {%- endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese empleado reportante.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="fecha_incidente" class="form-label">
                            Fecha y Hora del Incidente <span class="required">*</span>
                        </label>
                        <input type="datetime-local" class="form-control" id="fecha_incidente" name="fecha_incidente" required placeholder="Ingrese fecha y hora del incidente">
                        <div class="invalid-feedback">
                            Por favor ingrese fecha y hora del incidente.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="tipo_incidente" class="form-label">
                            Tipo de Incidente <span class="required">*</span>
                        </label>
                        <select class="form-select" id="tipo_incidente" name="tipo_incidente" required>
                            <option value="">Seleccione una opción</option>
                            <option value="accidente">Accidente</option>
                            <option value="seguridad">Seguridad</option>
                            <option value="calidad">Calidad</option>
                            <option value="ambiental">Ambiental</option>
                            <option value="otro">Otro</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese tipo de incidente.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="descripcion" class="form-label">
                            Descripción del Incidente <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="4" required placeholder="Ingrese descripción del incidente"></textarea>
                        <div class="invalid-feedback">
                            Por favor ingrese descripción del incidente.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="gravedad" class="form-label">
                            Gravedad <span class="required">*</span>
                        </label>
                        <select class="form-select" id="gravedad" name="gravedad" required>
                            <option value="">Seleccione una opción</option>
                            <option value="leve">Leve</option>
                            <option value="moderada">Moderada</option>
                            <option value="grave">Grave</option>
                            <option value="crítica">Crítica</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese gravedad.
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="create-form-actions">
                    <div class="action-buttons">
                        <a href="{{ url_for('listar_incidentes') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Incidente
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formularios Bootstrap
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>