{% extends "base.html" %}

{% block content %}
<div class="page-header">
    <div class="header-content">
        <div class="header-left">
            <h1 class="page-title">
                <i class="fas fa-list"></i>
                Gestión de Incidentes
            </h1>
            <p class="page-subtitle">Control y administración de incidentes</p>
        </div>
        <div class="header-actions">
            <a href="{{ url_for('crear_incidente') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nuevo Incidente
            </a>
        </div>
</div>

<!-- Estadísticas del Módulo -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon bg-blue">
            <i class="fas fa-list"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ datos|length or 0 }}</div>
            <div class="stat-label">Total Registros</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-green">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ datos|length or 0 }}</div>
            <div class="stat-label">Activos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-orange">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">0</div>
            <div class="stat-label">Pendientes</div>
        </div>
    </div>
</div>

</div>


<div class="dashboard-header">
  <h1><i class="fas fa-exclamation-triangle"></i> Incidentes</h1>
  <a href="{{ url_for('crear_incidente') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Reportar incidente</a>
</div>

<div class="table-container">
  {% if incidentes %}
  <table class="table">
    <thead>
      <tr>
        <th>ID</th><th>Fecha</th><th>Descripción</th><th>Estado</th><th>Obra</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for i in incidentes %}
      <tr>
        <td>{{ i.id_incidente }}</td>
        <td>{{ i.fecha_incidente }}</td>
        <td>{{ i.descripcion_incidente[:80] }}{% if i.descripcion_incidente|length > 80 %}…{% endif %}</td>
        <td>
          {% set est = (i.estado_incidente or 'Reportado') %}
          <span class="badge {% if est=='Reportado' %}badge-warning{% elif est=='En Proceso' %}badge-info{% elif est=='Resuelto' %}badge-success{% else %}badge-secondary{% endif %}">{{ est }}</span>
        </td>
        <td>{{ i.nombre_obra or 'Sin obra' }}</td>
        <td class="table-actions">
          <a class="btn btn-sm btn-view" href="{{ url_for('ver_incidente', id=i.id_incidente) }}"><i class="fas fa-eye"></i> Ver</a>
          <a class="btn btn-sm btn-edit" href="{{ url_for('editar_incidente', id=i.id_incidente) }}"><i class="fas fa-edit"></i> Editar</a>
          <form class="inline-form" action="{{ url_for('eliminar_incidente', id=i.id_incidente) }}" method="post" onsubmit="return confirm('¿Eliminar incidente?');">
            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Eliminar</button>
          </form>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% else %}
  <div class="empty-state">
    <i class="fas fa-inbox"></i>
    <p>No hay incidentes registrados</p>
  </div>
  {% endif %}
</div>
{% endblock %}