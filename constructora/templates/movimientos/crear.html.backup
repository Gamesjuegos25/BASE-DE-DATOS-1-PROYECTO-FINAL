{% extends "base.html" %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Movimientos - Sistema Constructora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/create-forms.css') }}" rel="stylesheet">
</head>
<body>
    <div class="create-form-container">
        <!-- Header -->
        <div class="create-page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('listar_movimientos') }}">
                            <i class="fas fa-list"></i> Movimientos
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-plus"></i> Crear Movimiento
                    </li>
                </ol>
            </nav>
            
            <div class="create-title-section">
                <h1 class="create-title">
                    <i class="fas fa-plus-circle"></i>
                    Crear Movimiento
                </h1>
                <p class="create-subtitle">Complete el formulario para registrar una nueva movimiento</p>
            </div>
        </div>

        <!-- Formulario -->
        <div class="create-form-card">
            <form method="POST" action="{{ url_for('crear_movimiento_material') }}" class="needs-validation" novalidate>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="bodega_id" class="form-label">
                            Bodega <span class="required">*</span>
                        </label>
                        <select class="form-select" id="bodega_id" name="bodega_id" required>
                            <option value="">Seleccione una opción</option>
                            {%- for item in bodegas %}
                            <option value="{{ item[0] }}">{{ item[1] }}</option>
                            {%- endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese bodega.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="material_id" class="form-label">
                            Material <span class="required">*</span>
                        </label>
                        <select class="form-select" id="material_id" name="material_id" required>
                            <option value="">Seleccione una opción</option>
                            {%- for item in materiales %}
                            <option value="{{ item[0] }}">{{ item[1] }}</option>
                            {%- endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese material.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="tipo_movimiento" class="form-label">
                            Tipo de Movimiento <span class="required">*</span>
                        </label>
                        <select class="form-select" id="tipo_movimiento" name="tipo_movimiento" required>
                            <option value="">Seleccione una opción</option>
                            <option value="entrada">Entrada</option>
                            <option value="salida">Salida</option>
                            <option value="transferencia">Transferencia</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese tipo de movimiento.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="cantidad" class="form-label">
                            Cantidad <span class="required">*</span>
                        </label>
                        <input type="number" class="form-control" id="cantidad" name="cantidad" required step="0.01" placeholder="Ingrese cantidad">
                        <div class="invalid-feedback">
                            Por favor ingrese cantidad.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="fecha" class="form-label">
                            Fecha <span class="required">*</span>
                        </label>
                        <input type="date" class="form-control" id="fecha" name="fecha" required placeholder="Ingrese fecha">
                        <div class="invalid-feedback">
                            Por favor ingrese fecha.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="responsable" class="form-label">
                            Responsable <span class="required">*</span>
                        </label>
                        <input type="text" class="form-control" id="responsable" name="responsable" required placeholder="Ingrese responsable">
                        <div class="invalid-feedback">
                            Por favor ingrese responsable.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="observaciones" class="form-label">
                            Observaciones
                        </label>
                        <textarea class="form-control" id="observaciones" name="observaciones" rows="3" placeholder="Ingrese observaciones"></textarea>
                        <div class="invalid-feedback">
                            Por favor ingrese observaciones.
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="create-form-actions">
                    <div class="action-buttons">
                        <a href="{{ url_for('listar_movimientos') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Movimiento
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formularios Bootstrap
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>