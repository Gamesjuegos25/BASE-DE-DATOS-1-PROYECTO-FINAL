{% extends "base.html" %}

{% block content %}
<div class="dashboard-header">
  <h1><i class="fas fa-eye"></i> Movimiento #{{ movimiento.id_movimiento_material or movimiento.id }}</h1>
  <a href="{{ url_for('listar_movimientos_materiales') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
</div>

<div class="card">
  <div class="card-body">
    <p><strong>Tipo:</strong> <span class="badge {% if movimiento.tipo_movimiento=='Entrada' %}badge-success{% elif movimiento.tipo_movimiento=='Salida' %}badge-warning{% else %}badge-info{% endif %}">{{ movimiento.tipo_movimiento }}</span></p>
    <p><strong>Cantidad:</strong> {{ movimiento.cantidad or 0 }}</p>
    <p><strong>Material:</strong> {{ movimiento.nombre_material or 'Sin material' }}{% if movimiento.id_material %} (ID {{ movimiento.id_material }}){% endif %}</p>
    <p><strong>Fecha:</strong> {{ movimiento.fecha_movimiento }}</p>
    <p><strong>Origen:</strong> {{ movimiento.origen_movimiento or 'No especificado' }}</p>
    <p><strong>Destino:</strong> {{ movimiento.destino_movimiento or 'No especificado' }}</p>
    
    <div class="form-actions">
      <a class="btn btn-edit" href="{{ url_for('editar_movimiento_material', id=movimiento.id_movimiento_material or movimiento.id) }}"><i class="fas fa-edit"></i> Editar</a>
      <form class="inline-form" method="post" action="{{ url_for('eliminar_movimiento_material', id=movimiento.id_movimiento_material or movimiento.id) }}" onsubmit="return confirm('Â¿Eliminar movimiento?');">
        <button class="btn btn-danger" type="submit"><i class="fas fa-trash"></i> Eliminar</button>
      </form>
    </div>
  </div>
</div>
{% endblock %}
