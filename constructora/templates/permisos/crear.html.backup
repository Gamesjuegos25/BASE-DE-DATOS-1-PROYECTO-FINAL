<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Permisos - Sistema Constructora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/create-forms.css') }}" rel="stylesheet">
</head>
<body>
    <div class="create-form-container">
        <!-- Header -->
        <div class="create-page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ url_for('listar_permisos') }}">
                            <i class="fas fa-list"></i> Permisos
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-plus"></i> Crear Permiso
                    </li>
                </ol>
            </nav>
            
            <div class="create-title-section">
                <h1 class="create-title">
                    <i class="fas fa-plus-circle"></i>
                    Crear Permiso
                </h1>
                <p class="create-subtitle">Complete el formulario para registrar una nueva permiso</p>
            </div>
        </div>

        <!-- Formulario -->
        <div class="create-form-card">
            <form method="POST" action="{{ url_for('crear_permiso') }}" class="needs-validation" novalidate>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="empleado_id" class="form-label">
                            Empleado <span class="required">*</span>
                        </label>
                        <select class="form-select" id="empleado_id" name="empleado_id" required>
                            <option value="">Seleccione una opción</option>
                            {%- for item in empleados %}
                            <option value="{{ item[0] }}">{{ item[1] }}</option>
                            {%- endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese empleado.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="tipo_permiso" class="form-label">
                            Tipo de Permiso <span class="required">*</span>
                        </label>
                        <select class="form-select" id="tipo_permiso" name="tipo_permiso" required>
                            <option value="">Seleccione una opción</option>
                            <option value="vacaciones">Vacaciones</option>
                            <option value="enfermedad">Enfermedad</option>
                            <option value="personal">Personal</option>
                            <option value="capacitacion">Capacitacion</option>
                            <option value="otro">Otro</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese tipo de permiso.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="fecha_inicio" class="form-label">
                            Fecha de Inicio <span class="required">*</span>
                        </label>
                        <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio" required placeholder="Ingrese fecha de inicio">
                        <div class="invalid-feedback">
                            Por favor ingrese fecha de inicio.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="fecha_fin" class="form-label">
                            Fecha de Fin <span class="required">*</span>
                        </label>
                        <input type="date" class="form-control" id="fecha_fin" name="fecha_fin" required placeholder="Ingrese fecha de fin">
                        <div class="invalid-feedback">
                            Por favor ingrese fecha de fin.
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-group">
                        <label for="motivo" class="form-label">
                            Motivo <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="motivo" name="motivo" rows="3" required placeholder="Ingrese motivo"></textarea>
                        <div class="invalid-feedback">
                            Por favor ingrese motivo.
                        </div>
                    </div>
                    <div class="create-form-group">
                        <label for="estado" class="form-label">
                            Estado <span class="required">*</span>
                        </label>
                        <select class="form-select" id="estado" name="estado" required>
                            <option value="">Seleccione una opción</option>
                            <option value="pendiente">Pendiente</option>
                            <option value="aprobado">Aprobado</option>
                            <option value="rechazado">Rechazado</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor ingrese estado.
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="create-form-actions">
                    <div class="action-buttons">
                        <a href="{{ url_for('listar_permisos') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Permiso
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validación de formularios Bootstrap
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>