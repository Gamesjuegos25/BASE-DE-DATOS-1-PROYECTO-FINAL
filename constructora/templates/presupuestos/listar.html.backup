{% extends "base.html" %}

{% block title %}Presupuestos - Sistema Constructora{% endblock %}

{% block content %}
<div class="container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <a href="{{ url_for('dashboard') }}">Dashboard</a> /
        <span>Presupuestos</span>
    </nav>

    <div class="page-header">
        <div>
            <h1><i class="fas fa-calculator"></i> Gestión de Presupuestos</h1>
            <p class="subtitle">Administra los presupuestos de obras</p>
        </div>
        <a href="{{ url_for('crear_presupuesto') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Presupuesto
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calculator"></i>
            </div>
            <div class="stat-info">
                <h3>{{ presupuestos|length }}</h3>
                <p>Presupuestos Totales</p>
            </div>
        </div>

<!-- Estadísticas del Módulo -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon bg-blue">
            <i class="fas fa-list"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ presupuestos|length or 0 }}</div>
            <div class="stat-label">Total Presupuestos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-green">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ presupuestos|length or 0 }}</div>
            <div class="stat-label">Activos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-orange">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">0</div>
            <div class="stat-label">Pendientes</div>
        </div>
    </div>
</div>

    </div>

    <!-- Tabla de Presupuestos -->
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-list"></i> Lista de Presupuestos</h2>
        </div>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Monto Estimado</th>
                        <th>Fecha</th>
                        <th>Obra</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% if presupuestos %}
                        {% for presupuesto in presupuestos %}
                        <tr>
                            <td>{{ presupuesto.id_presupuesto }}</td>
                            <td>Q{{ "{:,.2f}".format(presupuesto.monto_estimado_presupuesto) }}</td>
                            <td>{{ presupuesto.fecha_presupuesto }}</td>
                            <td>
                                {% if presupuesto.nombre_obra %}
                                    <span class="badge badge-primary">{{ presupuesto.nombre_obra }}</span>
                                {% else %}
                                    <span class="badge badge-secondary">Sin obra asignada</span>
                                {% endif %}
                            </td>
                            <td class="actions">
                                <a href="{{ url_for('ver_presupuesto', id=presupuesto.id_presupuesto) }}" 
                                   class="btn-action btn-view" title="Ver detalle">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a href="{{ url_for('editar_presupuesto', id=presupuesto.id_presupuesto) }}" 
                                   class="btn-action btn-edit" title="Editar">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <form action="{{ url_for('eliminar_presupuesto', id=presupuesto.id_presupuesto) }}" 
                                      method="POST" class="inline-form" 
                                      onsubmit="return confirm('¿Estás seguro de eliminar este presupuesto?');">
                                    <button type="submit" class="btn-action btn-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No hay presupuestos registrados</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
