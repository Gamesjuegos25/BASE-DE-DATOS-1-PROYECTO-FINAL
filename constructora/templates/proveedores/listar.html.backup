{% extends "base.html" %}

{% block title %}Proveedores - Sistema Constructora{% endblock %}

{% block content %}
<div class="page-header">
    <div class="header-content">
        <div class="header-left">
            <h1 class="page-title">
                <i class="fas fa-truck"></i>
                Gesti√≥n de Proveedores
            </h1>
            <p class="page-subtitle">Control y administraci√≥n de proveedores</p>
        </div>
        <div class="header-actions">
            <a href="{{ url_for('crear_proveedor') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nuevo Proveedor
            </a>
        </div>
    </div>

<!-- Estad√≠sticas de Proveedores -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon bg-blue">
            <i class="fas fa-truck"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ proveedores|length or 0 }}</div>
            <div class="stat-label">Total Proveedores</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-green">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">{{ proveedores|length or 0 }}</div>
            <div class="stat-label">Activos</div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon bg-orange">
            <i class="fas fa-handshake"></i>
        </div>
        <div class="stat-content">
            <div class="stat-number">0</div>
            <div class="stat-label">Contratos Activos</div>
        </div>
    </div>
</div>

</div>


<div class="container">
    <div class="header-section">
        <h1>üè™ Gesti√≥n de Proveedores</h1>
        <a href="{{ url_for('crear_proveedor') }}" class="btn-primary">
            ‚ûï Nuevo Proveedor
        </a>
    </div>
    
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}
    
    <div class="stats-cards">
        <div class="stat-card">
            <h3>{{ proveedores|length }}</h3>
            <p>Total Proveedores</p>
        </div>
        <div class="stat-card">
            <h3>{{ proveedores|selectattr('contacto')|list|length }}</h3>
            <p>Con Contacto</p>
        </div>
        <div class="stat-card">
            <h3>{{ proveedores|length }}</h3>
            <p>Activos</p>
        </div>
        <div class="stat-card">
            <h3>0</h3>
            <p>Nuevos este mes</p>
        </div>
    </div>
    
    {% if proveedores %}
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre del Proveedor</th>
                        <th>Contacto</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for proveedor in proveedores %}
                    <tr>
                        <td>{{ proveedor.id_proveedor or 'N/A' }}</td>
                        <td>
                            <strong>{{ proveedor.nombre or 'Sin nombre' }}</strong>
                        </td>
                        <td>
                            {% if proveedor.contacto %}
                                {{ proveedor.contacto }}
                            {% else %}
                                <span class="text-muted">Sin contacto</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-success">Activo</span>
                        </td>
                        <td class="actions-cell">
                            <div class="table-actions">
                                <a class="btn-action btn-view" title="Ver detalles" href="{{ url_for('ver_proveedor', id=proveedor.id_proveedor) }}">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn-action btn-edit" title="Editar" href="{{ url_for('editar_proveedor', id=proveedor.id_proveedor) }}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="{{ url_for('eliminar_proveedor', id=proveedor.id_proveedor) }}" method="post" onsubmit="return confirm('¬øEliminar este proveedor?');">
                                    <button class="btn-action btn-danger" title="Eliminar" type="submit">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="empty-state">
            <div class="empty-icon">üè™</div>
            <h3>No hay proveedores registrados</h3>
            <p>Comienza agregando el primer proveedor de materiales y servicios.</p>
            <a href="{{ url_for('crear_proveedor') }}" class="btn-primary">
                ‚ûï Agregar Primer Proveedor
            </a>
        </div>
    {% endif %}
</div>

<script></script>
{% endblock %}