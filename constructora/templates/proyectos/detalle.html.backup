{% extends "base.html" %}
{% block title %}Detalle Proyecto{% endblock %}
{% block content %}
<div class="page-header">
  <nav class="breadcrumb">
    <a href="{{ url_for('dashboard') }}">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="{{ url_for('listar_proyectos') }}">Proyectos</a>
    <span class="breadcrumb-separator">/</span>
    <span>Detalle</span>
  </nav>
  <h1 class="page-title">üìã {{ proyecto.nombre or 'Proyecto' }} <small class="text-muted">ID: {{ proyecto.id or proyecto.proyecto_id }}</small></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-project-diagram"></i> Informaci√≥n del Proyecto</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4"><i class="fas fa-tag"></i> Nombre del Proyecto</dt>
          <dd class="col-sm-8">
            <strong>{{ proyecto.nombre or 'N/D' }}</strong>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-info-circle"></i> Estado</dt>
          <dd class="col-sm-8">
            {% set estado_class = {
              'ACTIVO': 'success',
              'PLANIFICACION': 'warning', 
              'COMPLETADO': 'info',
              'PAUSADO': 'secondary',
              'CANCELADO': 'danger'
            } %}
            <span class="badge badge-{{ estado_class.get(proyecto.estado, 'secondary') }}">
              {{ proyecto.estado or 'PLANIFICACION' }}
            </span>
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-calendar-alt"></i> Fecha de Inicio</dt>
          <dd class="col-sm-8">
            {% if proyecto.fecha_inicio %}
              <strong class="text-info">{{ proyecto.fecha_inicio.strftime('%d/%m/%Y') }}</strong>
            {% else %}
              <span class="text-muted">Sin definir</span>
            {% endif %}
          </dd>
          
          <dt class="col-sm-4"><i class="fas fa-calendar-check"></i> Fecha de Finalizaci√≥n</dt>
          <dd class="col-sm-8">
            {% if proyecto.fecha_fin %}
              <strong class="text-warning">{{ proyecto.fecha_fin.strftime('%d/%m/%Y') }}</strong>
            {% else %}
              <span class="text-muted">Sin definir</span>
            {% endif %}
          </dd>
          
          {% if proyecto.fecha_inicio and proyecto.fecha_fin %}
            <dt class="col-sm-4"><i class="fas fa-clock"></i> Duraci√≥n</dt>
            <dd class="col-sm-8">
              <strong class="text-primary">{{ (proyecto.fecha_fin - proyecto.fecha_inicio).days }} d√≠as</strong>
            </dd>
          {% endif %}
        </dl>
      </div>
    </div>
    
    <!-- Equipo Asignado al Proyecto -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-users-cog"></i> Equipo del Proyecto</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <!-- Arquitecto Asignado -->
          <div class="col-md-6 mb-3">
            <h6 class="text-success"><i class="fas fa-drafting-compass"></i> Arquitecto Principal</h6>
            {% if asignaciones.arquitectos %}
              {% for arq in asignaciones.arquitectos %}
                <div class="card card-body p-3 bg-light">
                  <h6 class="mb-1">üé® {{ arq.nombre_empleado }} {{ arq.apellido_empleado }}</h6>
                  <small class="text-muted">{{ arq.tipo_empleado }}</small>
                  {% if arq.responsabilidad %}
                    <p class="mb-1"><strong>Responsabilidad:</strong> {{ arq.responsabilidad }}</p>
                  {% endif %}
                  {% if arq.telefono %}
                    <small><i class="fas fa-phone"></i> {{ arq.telefono }}</small><br>
                  {% endif %}
                  {% if arq.email %}
                    <small><i class="fas fa-envelope"></i> {{ arq.email }}</small>
                  {% endif %}
                  <small class="text-muted">Asignado: {{ arq.fecha_asignacion.strftime('%d/%m/%Y') }}</small>
                </div>
              {% endfor %}
            {% else %}
              <p class="text-muted mb-0"><i class="fas fa-exclamation-triangle"></i> No hay arquitecto asignado</p>
            {% endif %}
          </div>
          
          <!-- Ingeniero Asignado -->
          <div class="col-md-6 mb-3">
            <h6 class="text-primary"><i class="fas fa-hard-hat"></i> Ingeniero Principal</h6>
            {% if asignaciones.ingenieros %}
              {% for ing in asignaciones.ingenieros %}
                <div class="card card-body p-3 bg-light">
                  <h6 class="mb-1">‚öôÔ∏è {{ ing.nombre_empleado }} {{ ing.apellido_empleado }}</h6>
                  <small class="text-muted">{{ ing.tipo_empleado }}</small>
                  {% if ing.responsabilidad %}
                    <p class="mb-1"><strong>Responsabilidad:</strong> {{ ing.responsabilidad }}</p>
                  {% endif %}
                  {% if ing.telefono %}
                    <small><i class="fas fa-phone"></i> {{ ing.telefono }}</small><br>
                  {% endif %}
                  {% if ing.email %}
                    <small><i class="fas fa-envelope"></i> {{ ing.email }}</small>
                  {% endif %}
                  <small class="text-muted">Asignado: {{ ing.fecha_asignacion.strftime('%d/%m/%Y') }}</small>
                </div>
              {% endfor %}
            {% else %}
              <p class="text-muted mb-0"><i class="fas fa-exclamation-triangle"></i> No hay ingeniero asignado</p>
            {% endif %}
          </div>
        </div>
        
        <!-- Otros Empleados -->
        {% if asignaciones.empleados %}
          {% set otros_empleados = asignaciones.empleados | selectattr('tipo_asignacion', 'ne', 'ARQUITECTO') | selectattr('tipo_asignacion', 'ne', 'INGENIERO') | list %}
          {% if otros_empleados %}
            <div class="col-md-12">
              <h6 class="text-info"><i class="fas fa-users"></i> Otros Miembros del Equipo</h6>
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Empleado</th>
                      <th>Rol</th>
                      <th>Especialidad</th>
                      <th>Fecha Asignaci√≥n</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for emp in otros_empleados %}
                    <tr>
                      <td><strong>{{ emp.nombre_empleado }} {{ emp.apellido_empleado }}</strong></td>
                      <td><span class="badge badge-info">{{ emp.tipo_asignacion }}</span></td>
                      <td><small class="text-muted">{{ emp.tipo_empleado }}</small></td>
                      <td><small>{{ emp.fecha_asignacion.strftime('%d/%m/%Y') }}</small></td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
    
    <!-- Obras Asignadas -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-building"></i> Obras Asignadas</h5>
      </div>
      <div class="card-body">
        {% if asignaciones.obras %}
          {% for obra in asignaciones.obras %}
            <div class="card card-body mb-3 bg-light">
              <div class="row">
                <div class="col-md-8">
                  <h6 class="mb-1">üèóÔ∏è {{ obra.nombre_obra }}</h6>
                  {% if obra.descripcion_obra %}
                    <p class="mb-1">{{ obra.descripcion_obra }}</p>
                  {% endif %}
                  <div class="mb-2">
                    <span class="badge badge-{{ 'success' if obra.estado_obra == 'Completada' else 'warning' if obra.estado_obra == 'En Progreso' else 'info' }}">
                      {{ obra.estado_obra }}
                    </span>
                    {% if obra.tipo_obra %}
                      <span class="badge badge-secondary">{{ obra.tipo_obra }}</span>
                    {% endif %}
                  </div>
                  {% if obra.ubicacion_obra %}
                    <small class="text-muted"><i class="fas fa-map-marker-alt"></i> {{ obra.ubicacion_obra }}</small>
                  {% endif %}
                </div>
                <div class="col-md-4 text-right">
                  {% if obra.valor_obra %}
                    <h6 class="text-success mb-1">Q{{ "{:,.2f}".format(obra.valor_obra) }}</h6>
                  {% endif %}
                  <small class="text-muted">Asignada: {{ obra.fecha_asignacion.strftime('%d/%m/%Y') }}</small><br>
                  <a href="{{ url_for('ver_obra', id=obra.id_obra) }}" class="btn btn-sm btn-outline-primary mt-1">
                    <i class="fas fa-eye"></i> Ver Obra
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <p class="text-muted mb-0"><i class="fas fa-exclamation-circle"></i> No hay obras asignadas a este proyecto</p>
        {% endif %}
      </div>
    </div>
    
    <!-- Veh√≠culos y Equipos -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-truck"></i> Veh√≠culos y Equipos Asignados</h5>
      </div>
      <div class="card-body">
        {% if asignaciones.vehiculos %}
          <div class="row">
            {% for veh in asignaciones.vehiculos %}
            <div class="col-md-6 mb-3">
              <div class="card card-body p-3">
                <h6 class="mb-1">üöö {{ veh.placa_vehiculo }}</h6>
                <p class="mb-1"><strong>{{ veh.tipo_vehiculo }}</strong></p>
                <span class="badge badge-{{ 'success' if veh.estado_vehiculo == 'DISPONIBLE' else 'warning' }} mb-2">
                  {{ veh.estado_vehiculo }}
                </span>
                {% if veh.proposito %}
                  <p class="mb-1"><strong>Prop√≥sito:</strong> {{ veh.proposito }}</p>
                {% endif %}
                <small class="text-muted">Asignado: {{ veh.fecha_asignacion.strftime('%d/%m/%Y') }}</small>
                {% if veh.fecha_fin_asignacion %}
                  <br><small class="text-warning">Hasta: {{ veh.fecha_fin_asignacion.strftime('%d/%m/%Y') }}</small>
                {% endif %}
              </div>
            </div>
            {% endfor %}
          </div>
        {% else %}
          <p class="text-muted mb-0"><i class="fas fa-exclamation-circle"></i> No hay veh√≠culos asignados a este proyecto</p>
        {% endif %}
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <!-- Estad√≠sticas del Proyecto -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Estad√≠sticas</h5>
      </div>
      <div class="card-body text-center">
        <div class="row">
          <div class="col-6 mb-3">
            <h3 class="text-primary">{{ asignaciones.estadisticas.total_obras }}</h3>
            <small class="text-muted">Obras Asignadas</small>
          </div>
          <div class="col-6 mb-3">
            <h3 class="text-success">{{ asignaciones.estadisticas.total_empleados }}</h3>
            <small class="text-muted">Miembros Equipo</small>
          </div>
          <div class="col-6 mb-3">
            <h3 class="text-info">{{ asignaciones.estadisticas.total_vehiculos }}</h3>
            <small class="text-muted">Veh√≠culos</small>
          </div>
          <div class="col-6 mb-3">
            <h3 class="text-warning">Q{{ "{:,.0f}".format(asignaciones.estadisticas.valor_total_obras) }}</h3>
            <small class="text-muted">Valor Obras</small>
          </div>
        </div>
        
        <hr>
        
        <div class="row">
          <div class="col-6">
            <h4 class="text-success">{{ asignaciones.estadisticas.total_arquitectos }}</h4>
            <small class="text-muted">Arquitectos</small>
          </div>
          <div class="col-6">
            <h4 class="text-primary">{{ asignaciones.estadisticas.total_ingenieros }}</h4>
            <small class="text-muted">Ingenieros</small>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Acciones -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
      </div>
      <div class="card-body">
        <div class="d-flex flex-column gap-2">
          <a class="btn btn-primary" href="{{ url_for('editar_proyecto', id=(proyecto.id or proyecto.proyecto_id)) }}">
            <i class="fas fa-edit"></i> Editar Proyecto
          </a>
          <a class="btn btn-success" href="#">
            <i class="fas fa-plus"></i> Asignar Recursos
          </a>
          <a class="btn btn-info" href="#">
            <i class="fas fa-chart-line"></i> Ver Progreso
          </a>
          <a class="btn btn-secondary" href="{{ url_for('listar_proyectos') }}">
            <i class="fas fa-arrow-left"></i> Volver a Lista
          </a>
          <form action="{{ url_for('eliminar_proyecto', id=(proyecto.id or proyecto.proyecto_id)) }}" method="post" onsubmit="return confirm('¬øEliminar este proyecto?');" class="mt-2">
            <button class="btn btn-danger w-100" type="submit">
              <i class="fas fa-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Breadcrumb Navigation */
.breadcrumb {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  font-size: 14px;
}

.breadcrumb a {
  color: #007bff;
  text-decoration: none;
  transition: color 0.2s;
}

.breadcrumb a:hover {
  color: #0056b3;
  text-decoration: underline;
}

.breadcrumb-separator {
  margin: 0 8px;
  color: #6c757d;
}

.page-title {
  font-size: 1.75rem;
  font-weight: 600;
  color: #2c3e50;
  margin: 0;
}

.page-title small {
  font-size: 1rem;
  font-weight: 400;
}

/* Card Styling */
.card {
  border: 1px solid #e3e6f0;
  border-radius: 0.35rem;
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
}

.card-header {
  background-color: #f8f9fc;
  border-bottom: 1px solid #e3e6f0;
  padding: 1rem 1.25rem;
}

.card-header h5 {
  color: #5a5c69;
  margin: 0;
}

/* Badge Colors */
.badge {
  font-size: 0.875rem;
  padding: 0.375rem 0.75rem;
}

/* Gap Utilities */
.gap-2 > * + * {
  margin-top: 0.5rem;
}
</style>
{% endblock %}
