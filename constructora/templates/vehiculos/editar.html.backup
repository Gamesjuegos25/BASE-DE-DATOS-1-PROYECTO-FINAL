{% extends "base.html" %}
{% block title %}Editar Vehículo{% endblock %}
{% block content %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/create-forms.css') }}">


<div class="page-header">
  <nav class="breadcrumb">
    <a href="{{ url_for('dashboard') }}">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="{{ url_for('listar_vehiculos') }}">Vehículos</a>
    <span class="breadcrumb-separator">/</span>
    <span>Editar</span>
  </nav>
  <h1 class="page-title">✏️ Editar Vehículo</h1>
</div>

<div class="create-form-container">
<form action="{{ url_for('editar_vehiculo', id=vehiculo.id_vehiculo) }}" method="post" class="form">
  <div class="form-group">
    <label>Placa</label>
    <input type="text" name="placa" class="form-control" value="{{ vehiculo.placa or '' }}" required>
  </div>
  <div class="form-group">
    <label>Estado</label>
    <input type="text" name="estado" class="form-control" value="{{ vehiculo.estado or '' }}">
  </div>
  <div class="form-group">
    <label>Tipo</label>
    <input type="text" name="tipo" class="form-control" value="{{ vehiculo.tipo or '' }}">
  </div>
  <div class="form-actions">
    <a class="btn btn-secondary" href="{{ url_for('listar_vehiculos') }}">Cancelar</a>
    <button class="btn btn-primary" type="submit">Guardar</button>
  </div>
</form>
</div>

{% endblock %}